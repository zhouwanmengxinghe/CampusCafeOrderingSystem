@model UserHistoryViewModel
@{
    ViewData["Title"] = "My History";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fas fa-history"></i> My Activity History</h4>
                </div>
                <div class="card-body">
                    <!-- Navigation Tabs -->
                    <ul class="nav nav-tabs" id="historyTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="orders-tab" data-bs-toggle="tab" data-bs-target="#orders" type="button" role="tab">
                                <i class="fas fa-shopping-bag"></i> Order History
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="feedback-tab" data-bs-toggle="tab" data-bs-target="#feedback" type="button" role="tab">
                                <i class="fas fa-comments"></i> Feedback History
                            </button>
                        </li>
                    </ul>

                    <div class="tab-content" id="historyTabContent">
                        <!-- Order History Tab -->
                        <div class="tab-pane fade show active" id="orders" role="tabpanel">
                            <div class="mt-3">
                                @if (Model.RecentOrders.Any())
                                {
                                    <div class="row">
                                        @foreach (var order in Model.RecentOrders)
                                        {
                                            <div class="col-md-6 mb-3">
                                                <div class="card border-left-primary">
                                                    <div class="card-body">
                                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                                            <h6 class="card-title mb-0">Order #@order.OrderNumber</h6>
                                                            <span class="badge bg-@(order.Status == CampusCafeOrderingSystem.Models.OrderStatus.Completed ? "success" : order.Status == CampusCafeOrderingSystem.Models.OrderStatus.Cancelled ? "danger" : "warning")">@order.Status</span>
                                                        </div>
                                                        <p class="card-text text-muted small mb-2">
                                                            <i class="fas fa-calendar"></i> @order.OrderDate.ToString("MMM dd, yyyy HH:mm")
                                                        </p>
                                                        <p class="card-text">
                                                            <strong>Total: @order.TotalAmount.ToString("C")</strong><br>
                                                            <small class="text-muted">@order.OrderItems.Count item(s) â€¢ @order.PaymentMethod</small>
                                                        </p>
                                                        <div class="d-flex justify-content-between">
                                                            <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                                                <i class="fas fa-eye"></i> View Details
                                                            </a>
                                                            @if (order.Status == CampusCafeOrderingSystem.Models.OrderStatus.Completed)
                                                            {
                                                                <button class="btn btn-sm btn-outline-success" onclick="reorderItems(@order.Id)">
                                                                    <i class="fas fa-redo"></i> Reorder
                                                                </button>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    <div class="text-center mt-3">
                                        <a asp-controller="Order" asp-action="MyOrders" class="btn btn-primary">
                                            <i class="fas fa-list"></i> View All Orders
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center py-5">
                                        <i class="fas fa-shopping-bag fa-3x text-muted mb-3"></i>
                                        <h5 class="text-muted">No orders yet</h5>
                                        <p class="text-muted">Start ordering to see your history here!</p>
                                        <a asp-controller="Menu" asp-action="Index" class="btn btn-primary">
                                            <i class="fas fa-utensils"></i> Browse Menu
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Feedback History Tab -->
                        <div class="tab-pane fade" id="feedback" role="tabpanel">
                            <div class="mt-3">
                                @if (Model.RecentFeedbacks.Any())
                                {
                                    @foreach (var feedback in Model.RecentFeedbacks)
                                    {
                                        <div class="card mb-3">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between align-items-start mb-2">
                                                    <div>
                                                        <h6 class="card-title mb-1">@feedback.Subject</h6>
                                                        <small class="text-muted">
                                                            <i class="fas fa-calendar"></i> @feedback.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                                                        </small>
                                                    </div>
                                                    <div class="text-end">
                                                        <span class="badge bg-@(feedback.Category.ToString().ToLower())">@feedback.Category</span>
                                                        <br>
                                                        <span class="badge bg-@(feedback.Status == CampusCafeOrderingSystem.Models.FeedbackStatus.Resolved ? "success" : feedback.Status == CampusCafeOrderingSystem.Models.FeedbackStatus.InProgress ? "warning" : "secondary") mt-1">@feedback.Status</span>
                                                    </div>
                                                </div>
                                                <p class="card-text">@feedback.Message</p>
                                                @if (feedback.Rating.HasValue)
                                                {
                                                    <div class="mb-2">
                                                        <small class="text-muted">Rating: </small>
                                                        @for (int i = 1; i <= 5; i++)
                                                        {
                                                            <i class="fas fa-star @(i <= feedback.Rating ? "text-warning" : "text-muted")"></i>
                                                        }
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(feedback.AdminReply))
                                                {
                                                    <div class="alert alert-light mt-2">
                                                        <strong>Admin Reply:</strong> @feedback.AdminReply
                                                        @if (feedback.RepliedAt.HasValue)
                                                        {
                                                            <br><small class="text-muted">Replied on @feedback.RepliedAt.Value.ToString("MMM dd, yyyy HH:mm")</small>
                                                        }
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                    <div class="text-center mt-3">
                                        <a asp-controller="Support" asp-action="MyFeedback" class="btn btn-primary">
                                            <i class="fas fa-list"></i> View All Feedback
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center py-5">
                                        <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                                        <h5 class="text-muted">No feedback submitted yet</h5>
                                        <p class="text-muted">Share your experience with us!</p>
                                        <a asp-controller="Support" asp-action="Feedback" class="btn btn-primary">
                                            <i class="fas fa-comment-alt"></i> Submit Feedback
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function reorderItems(orderId) {
