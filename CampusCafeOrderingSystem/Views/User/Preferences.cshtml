@model UserPreference
@{
    ViewData["Title"] = "My Preferences";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="fas fa-cog"></i> My Preferences</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Preferences" method="post">
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="UserId" type="hidden" />
                        
                        <!-- Notification Preferences -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary"><i class="fas fa-bell"></i> Notification Preferences</h5>
                                <hr />
                            </div>
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input asp-for="EmailNotifications" class="form-check-input" type="checkbox" />
                                    <label asp-for="EmailNotifications" class="form-check-label">
                                        Email Notifications
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input asp-for="SmsNotifications" class="form-check-input" type="checkbox" />
                                    <label asp-for="SmsNotifications" class="form-check-label">
                                        SMS Notifications
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Interface Preferences -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary"><i class="fas fa-palette"></i> Interface Preferences</h5>
                                <hr />
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Theme" class="form-label">Theme</label>
                                    <select asp-for="Theme" class="form-select">
                                        <option value="Light">Light</option>
                                        <option value="Dark">Dark</option>
                                        <option value="Auto">Auto</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Language" class="form-label">Language</label>
                                    <select asp-for="Language" class="form-select">
                                        <option value="English">English</option>
                                        <option value="Chinese">中文</option>
                                        <option value="Spanish">Español</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Payment & Delivery Preferences -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary"><i class="fas fa-credit-card"></i> Payment & Delivery</h5>
                                <hr />
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PreferredPaymentMethod" class="form-label">Preferred Payment Method</label>
                                    <select asp-for="PreferredPaymentMethod" class="form-select">
                                        <option value="CampusCard">Campus Card</option>
                                        <option value="CreditCard">Credit Card</option>
                                        <option value="PayPal">PayPal</option>
                                        <option value="ApplePay">Apple Pay</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DeliveryInstructions" class="form-label">Default Delivery Instructions</label>
                                    <textarea asp-for="DeliveryInstructions" class="form-control" rows="3" placeholder="e.g., Leave at front desk, Call when arrived"></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- Dietary Preferences -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-primary"><i class="fas fa-utensils"></i> Dietary Preferences</h5>
                                <hr />
                            </div>
                            <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="DietaryRestrictions" class="form-label">Dietary Restrictions & Allergies</label>
                                    <textarea asp-for="DietaryRestrictions" class="form-control" rows="3" placeholder="e.g., Vegetarian, Gluten-free, Nut allergy"></textarea>
                                    <small class="form-text text-muted">This information helps us recommend suitable menu items</small>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Profile" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Profile
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Save Preferences
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}