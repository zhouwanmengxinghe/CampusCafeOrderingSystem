@model List<CafeApp.Models.MenuItem>

@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card-container {
        perspective: 1000px;
    }

    .flip-card {
        transition: transform 0.6s;
        transform-style: preserve-3d;
        position: relative;
        height: 300px;
    }

    .card:hover .flip-card {
        transform: rotateY(180deg);
    }

    .card-front, .card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        border-radius: 20px;
    }

    .card-front {
        z-index: 2;
    }

    .card-back {
        transform: rotateY(180deg);
        background-color: #F9F9F9;
        padding: 20px;
        color: #333;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-controller="Cart" asp-action="Index" class="btn" style="background-color:#4CAF50; color:white; border-radius:12px;">
        <i class="fas fa-shopping-cart"></i> View Cart
    </a>
</div>

<div class="container" style="background-color:#F9F9F9; padding:30px; border-radius: 20px;">
    <h2 style="color:#4CAF50; font-weight:bold;">Hello, @User.Identity.Name</h2>
    <div class="mb-3 text-muted">
        <i class="fas fa-clock"></i>
        It is already <span id="time-display"></span>
        <p style="color:#777777;">Time for a coffee break.</p>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card card-container shadow" style="border-radius: 20px;">
                    <div class="flip-card">
                        <div class="card-front">
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 300px; object-fit: cover; border-radius: 20px 20px 0 0;" />
                        </div>
                        <div class="card-back d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text" style="color: #777;">@item.Description</p>
                                <p class="card-text" style="color: #4CAF50; font-weight: bold;">$@item.Price.ToString("0.00")</p>
                            </div>
                            <form asp-controller="Cart" asp-action="Add" method="post">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn w-100" style="background-color:#4CAF50; color:white; border-radius:12px;">
                                    Add to Cart
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function updateTime() {
            const now = new Date();
            document.getElementById("time-display").textContent =
                now.toLocaleTimeString('en-US', {
                    hour: 'numeric',
                    minute: '2-digit',
                    hour12: true
                        });
                }

                updateTime();
        const delay = (60 - new Date().getSeconds()) * 1000;
        setTimeout(() => {
                    updateTime();
            setInterval(updateTime, 60000);
        }, delay);
    </script>
}
