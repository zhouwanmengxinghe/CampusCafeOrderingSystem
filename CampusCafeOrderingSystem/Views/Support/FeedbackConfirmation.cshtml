@model CampusCafeOrderingSystem.Models.Feedback
@{
    ViewData["Title"] = "Feedback Confirmation";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title mb-3">Thank you for your feedback! âœ…</h2>

                    @if (TempData["Success"] is string success && !string.IsNullOrWhiteSpace(success))
                    {
                        <div class="alert alert-success" role="alert">
                            @success
                        </div>
                    }

                    <p class="text-muted">Your feedback has been recorded. Below are the details of your submission:</p>

                    <dl class="row mt-3">
                        <dt class="col-sm-3">Subject</dt>
                        <dd class="col-sm-9">@Model.Subject</dd>

                        <dt class="col-sm-3">Category</dt>
                        <dd class="col-sm-9">@Model.Category</dd>

                        <dt class="col-sm-3">Priority</dt>
                        <dd class="col-sm-9">@Model.Priority</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">@Model.Status</dd>

                        <dt class="col-sm-3">Submitted At</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</dd>

                        <dt class="col-sm-3">Message</dt>
                        <dd class="col-sm-9"><pre class="mb-0" style="white-space: pre-wrap;">@Model.Message</pre></dd>
                    </dl>

                    <div class="mt-4 d-flex gap-2">
                        <a class="btn btn-primary" asp-controller="Support" asp-action="MyFeedback">View My Feedback</a>
                        <a class="btn btn-outline-secondary" asp-controller="Support" asp-action="Feedback">Submit Another Feedback</a>
                        <a class="btn btn-link" asp-controller="Support" asp-action="Index">Back to Support Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>