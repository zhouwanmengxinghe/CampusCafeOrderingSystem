@model CampusCafeOrderingSystem.Controllers.SupportIndexViewModel
@{
    ViewData["Title"] = "Help & Support";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center mb-4">Help & Support Center</h1>
            <p class="text-center text-muted mb-5">We're here to help! Find answers to common questions or get in touch with our support team.</p>
        </div>
    </div>

    <div class="row">
        <!-- Quick Actions -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-comments fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Submit Feedback</h5>
                    <p class="card-text">Share your experience or report an issue</p>
                    <a asp-action="Feedback" class="btn btn-primary">Submit Feedback</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-question-circle fa-3x text-info mb-3"></i>
                    <h5 class="card-title">FAQ</h5>
                    <p class="card-text">Find answers to frequently asked questions</p>
                    <a asp-action="FAQ" class="btn btn-info">View FAQ</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-envelope fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Contact Us</h5>
                    <p class="card-text">Get in touch with our support team</p>
                    <a asp-action="Contact" class="btn btn-success">Contact Us</a>
                </div>
            </div>
        </div>
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="row mt-4 justify-content-center">
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="fas fa-history fa-2x text-warning mb-3"></i>
                        <h5 class="card-title">My Feedback</h5>
                        <p class="card-text">View your previous feedback and responses</p>
                        <a asp-action="MyFeedback" class="btn btn-warning">View My Feedback</a>
                    </div>
                </div>
            </div>


        </div>
    }

    <!-- Contact Information -->
    <div class="row mt-5">
        <div class="col-md-12">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">Contact Information</h5>
                    <div class="row">
                        <div class="col-md-3">
                            <strong>Phone:</strong><br>
                            @Model.ContactInfo.Phone
                        </div>
                        <div class="col-md-3">
                            <strong>Email:</strong><br>
                            <a href="mailto:@Model.ContactInfo.Email">@Model.ContactInfo.Email</a>
                        </div>
                        <div class="col-md-3">
                            <strong>Address:</strong><br>
                            @Model.ContactInfo.Address
                        </div>
                        <div class="col-md-3">
                            <strong>Hours:</strong><br>
                            @Html.Raw(Model.ContactInfo.Hours.Replace("\n", "<br>"))
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Popular FAQ Items -->
    <div class="row mt-5">
        <div class="col-md-12">
            <h3>Popular Questions</h3>
            <div class="accordion" id="faqAccordion">
                @for (int i = 0; i < Math.Min(3, Model.FAQItems.Count); i++)
                {
                    var faq = Model.FAQItems[i];
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="heading@(i)">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse@(i)" aria-expanded="false" aria-controls="collapse@(i)">
                                @faq.Question
                            </button>
                        </h2>
                        <div id="collapse@(i)" class="accordion-collapse collapse" aria-labelledby="heading@(i)" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                @faq.Answer
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-3">
                <a asp-action="FAQ" class="btn btn-outline-primary">View All FAQ</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}