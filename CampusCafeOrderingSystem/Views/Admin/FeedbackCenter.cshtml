@model IEnumerable<CampusCafeOrderingSystem.Models.Feedback>

@{
    ViewData["Title"] = "Feedback Center";

    string PriorityBadge(CampusCafeOrderingSystem.Models.FeedbackPriority priority) => priority switch
    {
        CampusCafeOrderingSystem.Models.FeedbackPriority.Low => "<span class=\"badge bg-info\">Low</span>",
        CampusCafeOrderingSystem.Models.FeedbackPriority.Medium => "<span class=\"badge bg-warning\">Medium</span>",
        CampusCafeOrderingSystem.Models.FeedbackPriority.High => "<span class=\"badge bg-danger\">High</span>",
        CampusCafeOrderingSystem.Models.FeedbackPriority.Urgent => "<span class=\"badge bg-dark\">Urgent</span>",
        _ => "<span class=\"badge bg-secondary\">Unknown</span>"
    };


}

<h2 class="mb-4 text-center">Feedback Center</h2>

@if (TempData["Toast"] is string toast && !string.IsNullOrWhiteSpace(toast))
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @toast
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Search and Filter Section -->
<div class="card shadow-sm mb-3">
    <div class="card-body">
        <div class="row g-2 align-items-end">
            <div class="col-12 col-md-4">
                <label class="form-label">Keyword</label>
                <input id="searchBox" type="text" class="form-control" placeholder="Search by subject, message or user">
            </div>
            <div class="col-6 col-md-2">
                <label class="form-label">Category</label>
                <select id="categoryFilter" class="form-select">
                    <option value="">All</option>
                    <option value="General">General</option>
                    <option value="OrderIssue">Order Issue</option>
                    <option value="FoodQuality">Food Quality</option>
                    <option value="DeliveryService">Delivery Service</option>
                    <option value="PaymentIssue">Payment Issue</option>
                    <option value="TechnicalSupport">Technical Support</option>
                    <option value="Suggestion">Suggestion</option>
                    <option value="Complaint">Complaint</option>
                </select>
            </div>
            <div class="col-6 col-md-2">
                <label class="form-label">Priority</label>
                <select id="priorityFilter" class="form-select">
                    <option value="">All</option>
                    <option value="Low">Low</option>
                    <option value="Medium">Medium</option>
                    <option value="High">High</option>
                    <option value="Urgent">Urgent</option>
                </select>
            </div>

            <div class="col-12 col-md-2 text-md-end">
                <button id="resetFilters" class="btn btn-outline-secondary w-100">Reset</button>
            </div>
        </div>
    </div>
</div>

<!-- Feedback Table -->
<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table id="feedbackTable" class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th style="width:80px;">ID</th>
                        <th style="min-width:120px;">User</th>
                        <th style="min-width:150px;">Subject</th>
                        <th>Message</th>
                        <th style="width:100px;">Category</th>
                        <th style="width:90px;">Priority</th>

                        <th style="width:120px;">Date</th>
                        <th style="width:150px;" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var feedback in Model)
                    {
                        <tr>
                            <td>@feedback.Id</td>
                            <td>@(feedback.User?.UserName ?? feedback.UserEmail ?? "Unknown")</td>
                            <td>
                                <div class="text-truncate" style="max-width:150px;" title="@feedback.Subject">@feedback.Subject</div>
                            </td>
                            <td>
                                <div class="text-truncate" style="max-width:300px;" title="@feedback.Message">@feedback.Message</div>
                                <button type="button"
                                        class="btn btn-link p-0 small"
                                        data-bs-toggle="modal"
                                        data-bs-target="#feedbackModal"
                                        data-id="@feedback.Id"
                                        data-user="@(feedback.User?.UserName ?? feedback.UserEmail ?? "Unknown")"
                                        data-subject="@feedback.Subject"
                                        data-message="@feedback.Message"
                                        data-category="@feedback.Category"
                                        data-priority="@feedback.Priority"
                
                                        data-created="@feedback.CreatedAt.ToString("yyyy-MM-dd HH:mm")"
                                        data-response="@(feedback.AdminResponse ?? "")"
                                        data-responsedate="@(feedback.ResponseDate?.ToString("yyyy-MM-dd HH:mm") ?? "")">
                                    View full
                                </button>
                            </td>
                            <td>@feedback.Category</td>
                            <td>@Html.Raw(PriorityBadge(feedback.Priority))</td>

                            <td>@feedback.CreatedAt.ToString("yyyy-MM-dd")</td>
                            <td class="text-center">
                                <div class="d-flex gap-1 justify-content-center flex-wrap">
                                    <button type="button" 
                                            class="btn btn-primary btn-sm reply-btn" 
                                            data-id="@feedback.Id"
                                            >
                                        Reply
                                    </button>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Feedback Detail Modal -->
<div class="modal fade" id="feedbackModal" tabindex="-1" aria-labelledby="feedbackModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="feedbackModalLabel" class="modal-title">Feedback Detail</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <dl class="row mb-3">
                    <dt class="col-sm-3">ID</dt>
                    <dd id="md-id" class="col-sm-9"></dd>

                    <dt class="col-sm-3">User</dt>
                    <dd id="md-user" class="col-sm-9"></dd>

                    <dt class="col-sm-3">Subject</dt>
                    <dd id="md-subject" class="col-sm-9"></dd>

                    <dt class="col-sm-3">Category</dt>
                    <dd id="md-category" class="col-sm-9"></dd>

                    <dt class="col-sm-3">Priority</dt>
                    <dd id="md-priority" class="col-sm-9"></dd>



                    <dt class="col-sm-3">Created</dt>
                    <dd id="md-created" class="col-sm-9"></dd>

                    <dt class="col-sm-3">Message</dt>
                    <dd id="md-message" class="col-sm-9"></dd>
                </dl>

                <div id="admin-response-section" style="display: none;">
                    <hr>
                    <h6>Admin Response</h6>
                    <div id="md-response" class="mb-2"></div>
                    <small id="md-responsedate" class="text-muted"></small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Reply Modal -->
<div class="modal fade" id="replyModal" tabindex="-1" aria-labelledby="replyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="replyModalLabel" class="modal-title">Reply to Feedback</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="replyForm">
                    <input type="hidden" id="replyFeedbackId" />
                    <div class="mb-3">
                        <label for="adminResponse" class="form-label">Your Response</label>
                        <textarea class="form-control" id="adminResponse" rows="4" required placeholder="Enter your response to the user..."></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="sendReplyBtn">Send Reply</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

    <script>
        // DataTable initialization
        let dt;
        $(function () {
            dt = $('#feedbackTable').DataTable({
                pageLength: 10,
                order: [[7, 'desc']], // Sort by date descending
                dom: 'lrtip' // Hide default search box, use custom search
            });

            // Custom search and filtering
            $('#searchBox').on('keyup', function () {
                dt.search(this.value).draw();
            });

            $('#categoryFilter, #priorityFilter').on('change', function () { applyFilters(); });

            $('#resetFilters').on('click', function () {
                $('#searchBox').val('');
                $('#categoryFilter').val('');
                $('#priorityFilter').val('');
                dt.search('').draw();
                dt.columns().search('').draw();
            });

            function applyFilters() {
                const category = $('#categoryFilter').val();
                const priority = $('#priorityFilter').val();

                // Clear all searches
                dt.columns().search('');

                // Apply filters to respective columns
                if (category) dt.column(4).search(category, true, false);
                if (priority) dt.column(5).search(priority, true, false);

                dt.draw();
            }

            // Feedback detail modal handling
            var feedbackModal = document.getElementById('feedbackModal');
            feedbackModal.addEventListener('show.bs.modal', function (event) {
                const btn = event.relatedTarget;
                const id = btn.getAttribute('data-id');
                const user = btn.getAttribute('data-user');
                const subject = btn.getAttribute('data-subject');
                const message = btn.getAttribute('data-message');
                const category = btn.getAttribute('data-category');
                const priority = btn.getAttribute('data-priority');

                const created = btn.getAttribute('data-created');
                const response = btn.getAttribute('data-response');
                const responseDate = btn.getAttribute('data-responsedate');

                feedbackModal.querySelector('#md-id').textContent = id;
                feedbackModal.querySelector('#md-user').textContent = user;
                feedbackModal.querySelector('#md-subject').textContent = subject;
                feedbackModal.querySelector('#md-message').textContent = message;
                feedbackModal.querySelector('#md-category').textContent = category;
                feedbackModal.querySelector('#md-priority').textContent = priority;

                feedbackModal.querySelector('#md-created').textContent = created;

                // Show admin response if exists
                if (response && response.trim() !== '') {
                    feedbackModal.querySelector('#md-response').textContent = response;
                    feedbackModal.querySelector('#md-responsedate').textContent = 'Replied on: ' + responseDate;
                    feedbackModal.querySelector('#admin-response-section').style.display = 'block';
                } else {
                    feedbackModal.querySelector('#admin-response-section').style.display = 'none';
                }
            });

            // Reply button handling
            $('.reply-btn').on('click', function () {
                const feedbackId = $(this).data('id');
                $('#replyFeedbackId').val(feedbackId);
                $('#adminResponse').val('');
                $('#replyModal').modal('show');
            });

            // Send reply
            $('#sendReplyBtn').on('click', function () {
                const feedbackId = $('#replyFeedbackId').val();
                const response = $('#adminResponse').val().trim();

                if (!response) {
                    alert('Please enter a response.');
                    return;
                }

                $.ajax({
                    url: '@Url.Action("ReplyToFeedback", "Admin")',
                    type: 'POST',
                    data: {
                        feedbackId: feedbackId,
                        adminResponse: response,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (result) {
                        if (result.success) {
                            $('#replyModal').modal('hide');
                            location.reload(); // Refresh page to show updated feedback
                        } else {
                            alert('Error: ' + result.message);
                        }
                    },
                    error: function () {
                        alert('An error occurred while sending the reply.');
                    }
                });
            });


        });
    </script>
}

@Html.AntiForgeryToken()