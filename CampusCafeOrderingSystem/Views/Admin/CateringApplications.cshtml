@model List<CampusCafeOrderingSystem.Models.CateringApplication>
@{
    ViewData["Title"] = "Catering Applications Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">üçΩÔ∏è Catering Applications</h4>
                    <span class="badge badge-info">@Model.Count applications</span>
                </div>
                <div class="card-body">
                    @if (TempData["Toast"] != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            @TempData["Toast"]
                            <button type="button" class="close" data-dismiss="alert">
                                <span>&times;</span>
                            </button>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Event Name</th>
                                        <th>Contact Person</th>
                                        <th>Event Date</th>
                                        <th>People</th>
                                        <th>Budget/Person</th>
                                        <th>Total Budget</th>
                                        <th>Status</th>
                                        <th>Applied At</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var app in Model)
                                    {
                                        <tr>
                                            <td><strong>#@app.Id</strong></td>
                                            <td>@app.EventName</td>
                                            <td>
                                                <div>@app.ContactName</div>
                                                <small class="text-muted">@app.ContactEmail</small>
                                            </td>
                                            <td>@(app.EventDate?.ToString("yyyy-MM-dd HH:mm") ?? "Not set")</td>
                                            <td>@app.NumberOfPeople</td>
                                            <td>¬•@((app.BudgetPerPerson ?? 0).ToString("F2"))</td>
                                            <td>¬•@(((app.BudgetPerPerson ?? 0) * app.NumberOfPeople).ToString("F2"))</td>
                                            <td>
                                                @switch (app.Status)
                                                {
                                                    case ApplicationStatus.Pending:
                                                        <span class="badge badge-warning">‚è≥ Pending</span>
                                                        break;
                                                    case ApplicationStatus.Approved:
                                                        <span class="badge badge-success">‚úÖ Approved</span>
                                                        break;
                                                    case ApplicationStatus.Rejected:
                                                        <span class="badge badge-danger">‚ùå Rejected</span>
                                                        break;
                                                    case ApplicationStatus.Paid:
                                                        <span class="badge badge-info">üí∞ Paid</span>
                                                        break;
                                                    default:
                                                        <span class="badge badge-secondary">@app.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@app.CreatedAt.ToString("MM-dd HH:mm")</td>
                                            <td>
                                                @if (app.Status == ApplicationStatus.Pending)
                                                {
                                                    <div class="btn-group" role="group">
                                                        <form asp-action="ApproveCateringApplication" method="post" style="display: inline;">
                                                            <input type="hidden" name="id" value="@app.Id" />
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-success btn-sm" 
                                                                    onclick="return confirm('Approve this catering application?')">
                                                                ‚úÖ Approve
                                                            </button>
                                                        </form>
                                                        <button type="button" class="btn btn-danger btn-sm ml-1" 
                                                                data-toggle="modal" data-target="#rejectModal@(app.Id)">
                                                            ‚ùå Reject
                                                        </button>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No actions</span>
                                                    @if (app.ReviewedAt.HasValue)
                                                    {
                                                        <br><small class="text-muted">Reviewed: @app.ReviewedAt.Value.ToString("MM-dd HH:mm")</small>
                                                    }
                                                }
                                            </td>
                                        </tr>
                                        
                                        @if (!string.IsNullOrEmpty(app.SpecialRequirements))
                                        {
                                            <tr class="table-light">
                                                <td></td>
                                                <td colspan="9">
                                                    <small><strong>Special Requirements:</strong> @app.SpecialRequirements</small>
                                                </td>
                                            </tr>
                                        }
                                        
                                        @if (!string.IsNullOrEmpty(app.AdminNotes))
                                        {
                                            <tr class="table-warning">
                                                <td></td>
                                                <td colspan="9">
                                                    <small><strong>Admin Notes:</strong> @app.AdminNotes</small>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <h5 class="text-muted">No catering applications found</h5>
                            <p class="text-muted">Applications will appear here when users submit them.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reject Modals -->
@foreach (var app in Model.Where(a => a.Status == ApplicationStatus.Pending))
{
    <div class="modal fade" id="rejectModal@(app.Id)" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Reject Application #@app.Id</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <form asp-action="RejectCateringApplication" method="post">
                    <div class="modal-body">
                        <input type="hidden" name="id" value="@app.Id" />
                        @Html.AntiForgeryToken()
                        <p>Are you sure you want to reject the catering application for <strong>@app.EventName</strong>?</p>
                        <div class="form-group">
                            <label for="reason@(app.Id)">Reason for rejection (optional):</label>
                            <textarea class="form-control" id="reason@(app.Id)" name="reason" rows="3" 
                                      placeholder="Enter reason for rejection..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">‚ùå Reject Application</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut();
        }, 5000);
    </script>
}