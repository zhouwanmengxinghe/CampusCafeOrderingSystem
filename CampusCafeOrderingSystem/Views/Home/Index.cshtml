@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background-color: #f9f9f9;
        color: #333333;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .welcome-section {
        background: linear-gradient(135deg, #4CAF50, #81C784);
        color: white;
        padding: 60px 20px;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 40px;
    }

        .welcome-section h1 {
            font-size: 2.8rem;
            font-weight: 700;
        }

        .welcome-section p {
            font-size: 1.2rem;
            opacity: 0.9;
        }

    .btn-custom {
        background-color: white;
        color: #4CAF50;
        border-radius: 30px;
        padding: 12px 28px;
        font-weight: 600;
        border: none;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

        .btn-custom:hover {
            background-color: #C8E6C9;
            color: #2E7D32;
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.15);
        }

    .feature-card {
        background: white;
        padding: 30px 20px;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
    }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

    .feature-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #4CAF50, #81C784);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        color: white;
        font-size: 2rem;
    }

    .feature-card h4 {
        color: #2E7D32;
        margin-bottom: 15px;
        font-weight: 600;
    }

    .popular-item {
        background: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        transition: transform 0.3s ease;
        text-align: center;
    }

        .popular-item:hover {
            transform: translateY(-3px);
        }

    .item-image {
        width: 60px;
        height: 60px;
        background: #E8F5E8;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
        color: #4CAF50;
        font-size: 1.5rem;
    }

    .popular-item h5 {
        color: #333;
        margin-bottom: 10px;
        font-weight: 600;
    }

    .price {
        color: #4CAF50;
        font-size: 1.2rem;
        font-weight: 700;
        margin: 0;
    }

    .cta-section {
        background: #F1F8E9;
        padding: 50px 30px;
        border-radius: 12px;
        margin: 40px 0;
    }

        .cta-section h3 {
            color: #2E7D32;
            margin-bottom: 15px;
            font-weight: 600;
        }

        .cta-section p {
            color: #666;
            margin-bottom: 25px;
        }

    .btn-success {
        background: linear-gradient(135deg, #4CAF50, #66BB6A);
        border: none;
        border-radius: 30px;
        padding: 15px 35px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-success:hover {
            background: linear-gradient(135deg, #388E3C, #4CAF50);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(76, 175, 80, 0.3);
        }
</style>

<div class="container">
    <!-- Hero Section -->
    <div class="welcome-section text-center">
        <h1>Welcome to Campus Cafe!</h1>
        <p class="lead">Your favorite campus destination for fresh coffee, delicious meals, and memorable moments</p>
        <div class="row mt-4 justify-content-center">
            <div class="col-12 col-md-auto mb-2">
                <a asp-controller="Menu" asp-action="Index" class="btn-custom">
                    <i class="fas fa-utensils me-2"></i>View Menu
                </a>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="row mb-5">
        <div class="col-md-4 mb-4">
            <div class="feature-card text-center">
                <div class="feature-icon">
                    <i class="fas fa-coffee"></i>
                </div>
                <h4>Fresh Coffee</h4>
                <p>Premium quality coffee beans sourced from the finest farms, brewed fresh daily for the perfect cup.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="feature-card text-center">
                <div class="feature-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <h4>Quick Service</h4>
                <p>Fast and efficient service designed for busy campus life. Order ahead and skip the line!</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="feature-card text-center">
                <div class="feature-icon">
                    <i class="fas fa-leaf"></i>
                </div>
                <h4>Healthy Options</h4>
                <p>Fresh salads, organic ingredients, and dietary-friendly options to fuel your academic journey.</p>
            </div>
        </div>
    </div>

    <!-- Popular Items Section -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-4">Popular Items</h2>
            <div class="row">
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="popular-item">
                        <div class="item-image">
                            <i class="fas fa-mug-hot"></i>
                        </div>
                        <h5>Cappuccino</h5>
                        <p class="price">$3.50</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="popular-item">
                        <div class="item-image">
                            <i class="fas fa-hamburger"></i>
                        </div>
                        <h5>Campus Burger</h5>
                        <p class="price">$8.99</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="popular-item">
                        <div class="item-image">
                            <i class="fas fa-seedling"></i>
                        </div>
                        <h5>Fresh Salad</h5>
                        <p class="price">$6.50</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="popular-item">
                        <div class="item-image">
                            <i class="fas fa-cookie-bite"></i>
                        </div>
                        <h5>Chocolate Chip Cookie</h5>
                        <p class="price">$2.25</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="cta-section text-center">
        <h3>Ready to Order?</h3>
        <p>Join thousands of satisfied students and faculty members</p>
        <a asp-controller="Menu" asp-action="Index" class="btn btn-success btn-lg">
            Start Ordering Now
        </a>
    </div>
</div>
