@using System.Linq
@using CampusCafeOrderingSystem.Models


@model IEnumerable<CampusCafeOrderingSystem.Models.UserViewModel>

    @{
    ViewData["Title"] = "User Management";
    
    var allRoles = new[] { "Customer", "Vendor", "Admin" };
    }

    <h2 class="mb-4 text-center">👥 User Management</h2>

    @if (TempData["Toast"] is string toast && !string.IsNullOrWhiteSpace(toast))
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @toast
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

 
    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <div class="row g-2 align-items-end">
                <div class="col-12 col-md-6">
                    <label class="form-label">Keyword</label>
                    <input id="kw" type="text" class="form-control" placeholder="Search username/email">
                </div>
                <div class="col-6 col-md-3">
                    <label class="form-label">Filter by role</label>
                    <select id="roleFilter" class="form-select">
                        <option value="">All</option>
                        @foreach (var r in allRoles) {
                        <option value="@r">@r</option>
 }
                    </select>
                </div>
                <div class="col-6 col-md-3">
                    <button id="resetFilters" class="btn btn-outline-secondary w-100">Reset</button>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table id="usersTable" class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>User Name</th>
                            <th>Email</th>
                            <th>Current Roles</th>
                            <th style="min-width:320px;">Assign / Remove Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model ?? Enumerable.Empty<CampusCafeOrderingSystem.Models.UserViewModel>())
                {
                    var roles = (user.Roles ?? new List<string>()).ToList();
                        <tr>
                            <td>@(user.UserName ?? "-")</td>
                            <td>@(user.Email ?? "-")</td>
                            <td>
                                @if (roles.Any())
                            {
                                foreach (var r in roles)
                                {
                                <span class="badge bg-info text-dark me-1">@r</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">No roles</span>
                            }
                            </td>
                            <td>
                                <div class="d-flex flex-wrap gap-2">
                                   
                                    <form asp-action="AssignRole" asp-controller="Admin" method="post" class="d-flex flex-wrap gap-2">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="userId" value="@user.Id" />
                                        <select name="role" class="form-select form-select-sm w-auto">
                                            @foreach (var r in allRoles) {
                                            <option value="@r">@r</option>
 }
                                        </select>
                                        <button type="submit" class="btn btn-success btn-sm"
                                                title="Assign selected role"
                                                onclick="return confirm('Assign this role to @user.UserName ?');">
                                            Assign
                                        </button>
                                    </form>

                                
                                    <form asp-action="RemoveRole" asp-controller="Admin" method="post" class="d-flex flex-wrap gap-2">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="userId" value="@user.Id" />
                                        <select name="role" class="form-select form-select-sm w-auto" @(roles.Any() ? "" : "disabled")>
                                            @if (!roles.Any())
                                        {
                                            <option>(no roles)</option>
                                        }
                                        else
                                        {
                                            @foreach (var r in roles) {
                                            <option value="@r">@r</option>
 }
                                        }
                                        </select>
                                        <button type="submit" class="btn btn-outline-danger btn-sm"
                                                title="Remove selected role"
                                                @(roles.Any() ? "" : "disabled")
                                                onclick="return confirm('Remove this role from @user.UserName ?');">
                                            Remove
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @section Scripts {
      
        <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" />
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
        <script>
            $(function () {
                const dt = $('#usersTable').DataTable({
                    pageLength: 10,
                    order: [[0, 'asc']],
                    dom: 'lrtip' 
                });

                // Keyword search
                $('#kw').on('keyup', function () {
                    dt.search(this.value).draw();
                });

                // Role filter (applies to column 2: Current Roles)
                $('#roleFilter').on('change', function () {
                    const val = this.value;
                    if (!val) {
                        dt.column(2).search('').draw();
                    } else {
                        // Match word boundaries to avoid Vendor matching nonVendor etc.
                        const rx = `\\b${val}\\b`;
                        dt.column(2).search(rx, true, false).draw();
                    }
                });

                // Reset filters
                $('#resetFilters').on('click', function () {
                    $('#kw').val('');
                    $('#roleFilter').val('');
                    dt.search('').columns().search('').draw();
                });
            });
        </script>
    }
